<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/standingsSmallContainer"
    android:orientation="horizontal"
    android:paddingEnd="16dp"
    android:paddingTop="6dp"
    android:paddingBottom="6dp"
    android:background="?attr/colorSurface"
    android:paddingStart="16dp">

        <TextView
            android:id="@+id/positionText"
            android:layout_width="25dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:fontFamily="@font/kanit_light"
            tools:text="1"
            android:textSize="@dimen/font_size_standings_small_list"/>

        <Space
            android:layout_width="20dp"
            android:layout_height="wrap_content"/>

        <ImageView
            android:id="@+id/driverImg"
            android:layout_width="25dp"
            android:layout_height="19dp"
            android:layout_gravity="center"
            android:scaleType="fitStart"
            android:src="@drawable/ic_logo_car" />

        <Space
            android:layout_width="10dp"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/driverName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/kanit"
            android:layout_gravity="center"
            tools:text="string pizza"
            android:textSize="@dimen/font_size_standings_small_list" />

        <Space
            android:layout_width="16dp"
            android:layout_height="wrap_content"/>

        <ImageView
            android:id="@+id/countryImg"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:layout_gravity="center"
            android:scaleType="fitXY"
            android:src="@drawable/ic_logo_car" />

        <TextView
            android:id="@+id/driverPoints"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:textAlignment="viewEnd"
            android:layout_height="wrap_content"
            android:fontFamily="@font/kanit_light"
            android:text="125"
            android:textSize="@dimen/font_size_standings_small_list"/>
</LinearLayout>
