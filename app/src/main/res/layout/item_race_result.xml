<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_marginHorizontal="1dp"
    android:orientation="horizontal"
    android:paddingEnd="16dp"
    android:paddingTop="8dp"
    android:id="@+id/resultItemLayout"
    android:paddingBottom="8dp"
    android:background="?attr/colorSurface"
    android:paddingStart="16dp">

    <TextView
        android:id="@+id/positionText"
        android:layout_width="0dp"
        android:layout_weight="@integer/position_w"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        tools:text="1"
        android:lines="1"
        android:textSize="@dimen/font_size_results_list"/>

    <TextView
        android:id="@+id/driverName"
        android:lines="1"
        android:layout_width="0dp"
        android:layout_weight="@integer/driver_w"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        tools:text="string pizza"
        android:textSize="@dimen/font_size_results_list" />

    <TextView
        android:id="@+id/driverPoints"
        android:layout_width="0dp"
        android:lines="1"
        android:layout_weight="@integer/points_w"
        android:layout_gravity="center"
        android:textAlignment="center"
        android:layout_height="wrap_content"
        android:text="125"
        android:textSize="@dimen/font_size_results_list"/>

    <TextView
        android:id="@+id/driverLaps"
        android:lines="1"
        android:layout_width="0dp"
        android:layout_weight="@integer/laps_w"
        android:layout_gravity="center"
        android:textAlignment="center"
        android:layout_height="wrap_content"
        android:text="125"
        android:textSize="@dimen/font_size_results_list"/>

    <TextView
        android:id="@+id/driverTime"
        android:layout_width="0dp"
        android:layout_weight="@integer/time_w"
        android:lines="1"
        android:layout_gravity="center"
        android:textAlignment="viewEnd"
        android:layout_height="wrap_content"
        android:text="125"
        android:textSize="@dimen/font_size_results_list"/>

    <Space
        android:layout_width="10dp"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/driverAvgSpeed"
        android:lines="1"
        android:layout_width="0dp"
        android:layout_weight="@integer/speed_w"
        android:layout_gravity="center"
        android:textAlignment="viewEnd"
        android:layout_height="wrap_content"
        android:text="125"
        android:textSize="@dimen/font_size_results_list"/>
</LinearLayout>
