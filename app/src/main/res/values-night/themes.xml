<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.IndycarSuperFan" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- bottom bar icon tint -->
        <item name="colorPrimary">@color/high_secondary</item>
        <item name="colorPrimaryVariant">@color/high_primary</item>
        <item name="colorOnPrimary">@color/black_900</item>

        <!-- ?? -->
        <item name="colorSecondary">?attr/colorPrimaryVariant</item>
        <!-- ?? -->
        <item name="colorSecondaryVariant">#000088</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorOnSecondary</item>
        <!-- Customize your theme here. -->

        <!-- top bar -->
        <item name="colorSurface">@color/black_900</item>
        <!-- text colour on top bar, bottom bar inactive icon colour -->
        <item name="colorOnSurface">@color/gray_100</item>
        <!-- ?? -->
        <item name="colorSurfaceContainer">#FF0000</item>
        <!-- ?? -->
        <item name="colorPrimarySurface">#FFFF00</item>
        <!-- fragment background -->
        <item name="android:colorBackground">@color/gray_900</item>
        <!-- ?? -->
        <item name="android:fillColor">#FFFF00</item>
        <item name="android:textColor">?attr/colorOnSurface</item>

        <item name="android:fontFamily">@font/kanit</item>
        <item name="actionBarTheme">@style/ThemeOverlay.ActionBar</item>

    </style>

    <style name="ThemeOverlay.ActionBar" parent="">
        <item name="colorSurface">?android:attr/colorBackground</item>
        <item name="android:textColorPrimary">@color/purple</item>
    </style>

    <style name="IndyTabLayout" parent="Widget.Design.TabLayout">
        <item name="android:background">?android:attr/colorBackground</item>
        <item name="tabBackground">?android:attr/colorBackground</item>
        <item name="tabIndicator">@drawable/tab_indicator</item>
        <item name="tabIndicatorColor">?attr/colorPrimaryVariant</item>
        <item name="tabTextAppearance">@style/IndyTextAppearanceTab</item>
    </style>

    <style name="IndyTextAppearanceTab" parent="TextAppearance.Design.Tab">
        <item name="textAllCaps">false</item>
        <item name="android:textAllCaps">false</item>
        <item name="fontFamily">@font/kanit_light</item>
        <item name="maxLines">2</item>
    </style>

    <style name="IndyTextAppearanceTabBig" parent="TextAppearance.Design.Tab">
        <item name="textAllCaps">false</item>
        <item name="android:textAllCaps">false</item>
        <item name="fontFamily">@font/kanit</item>
        <item name="maxLines">1</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="TextDigital" parent="TextAppearance.AppCompat">
        <item name="android:textColor">#0F0</item>
        <item name="android:textStyle">italic</item>
        <item name="fontFamily">@font/kanit_light</item>
    </style>

    <style name="ThemeOverlay.IndycarSuperFan.FullscreenContainer" parent="">
        <item name="fullscreenBackgroundColor">@color/light_blue_900</item>
        <item name="fullscreenTextColor">@color/light_blue_A400</item>
    </style>

    <style name="SplashTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="android:windowBackground">@drawable/splash_background</item>
        <item name="android:statusBarColor">?attr/colorOnSecondary</item>
    </style>
</resources>